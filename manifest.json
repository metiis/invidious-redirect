{

  "manifest_version": 2,
  "name": "Invidious Redirect",
  "version": "1.7",

  "description": "Redirects all YouTube links to Invidious. Previously hooktube-redirect.",
  
  "icons": {
    "48": "icons/hooktube-48.ico"
  },

  "background": {
    "scripts": ["background.js"]
  },

  "permissions": [
    "storage"
  ],

  "browser_action": {
    "browser_style": true,
    "default_icon": "icons/hooktube-48.ico"
  },

  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "run_at": "document_start",
      "js": ["makehook.js"]
    }
  ]

}
